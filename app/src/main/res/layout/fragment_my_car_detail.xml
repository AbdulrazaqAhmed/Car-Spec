<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/myCartitleDetail_TextView"
            android:layout_width="346dp"
            android:layout_height="63dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:hint="Title"
            android:textSize="27sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/myCarphotoDetails_imageView"
            android:layout_width="0dp"
            android:layout_height="250dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myCartitleDetail_TextView"
            tools:src="@tools:sample/avatars" />

        <EditText
            android:id="@+id/myCardetailDescription_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:hint="Description"
            android:minHeight="48dp"
            android:padding="1dp"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myCarphotoDetails_imageView"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/myCardetailMake_textView"
            android:layout_width="407dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:hint="Make"
            android:padding="1dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myCardetailDescription_textView" />

        <EditText
            android:id="@+id/myCardetailModel.Textview"
            android:layout_width="407dp"
            android:layout_height="42dp"
            android:layout_margin="2dp"
            android:layout_marginTop="16dp"
            android:hint="Model"
            android:padding="1dp"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/myCardetailLocation_textView"
            tools:layout_editor_absoluteX="2dp" />

        <EditText
            android:id="@+id/myCardetailLocation_textView"
            android:layout_width="407dp"
            android:layout_height="39dp"
            android:layout_margin="2dp"
            android:layout_marginTop="48dp"
            android:hint="Location"
            android:padding="1dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myCardetailMake_textView" />

        <EditText
            android:id="@+id/myCardetailColor_textview"
            android:layout_width="408dp"
            android:layout_height="39dp"
            android:layout_margin="2dp"
            android:hint="Color"
            android:padding="1dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myCardetailModel.Textview" />

        <EditText
            android:id="@+id/myCardetailYear_textView"
            android:layout_width="408dp"
            android:layout_height="34dp"
            android:layout_margin="2dp"
            android:hint="Year"
            android:padding="1dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myCardetailColor_textview" />

        <EditText
            android:id="@+id/myCardetailCarPrice_textview"
            android:layout_width="130dp"
            android:layout_height="38dp"
            android:layout_margin="2dp"
            android:hint="Price"
            android:padding="1dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myCardetailYear_textView" />

        <Button
            android:id="@+id/updateMyCar_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="update"
            app:cornerRadius="25dp"
            app:layout_constraintTop_toBottomOf="@+id/myCardetailCarPrice_textview"
            tools:layout_editor_absoluteX="2dp" />

        <Button
            android:id="@+id/deleteMycars_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="delete"
            app:cornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/updateMyCar_button" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
